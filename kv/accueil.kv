                id: pack_1
                background_color: (0,0,0,0)
                size_hint: 0.25, 0.35
                pos_hint: {'center_x': 0.2, 'center_y': 0.675}
                canvas.before:
                    Color:
                        rgb: C("#78f4b5")
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20,20,20,20]
                on_press:
                    app.selection_rangement = "placard"
                    app.update_placard()
                    app.change_screen("placard_screen")

            Image:
