<Accueil>:
    FloatLayout:

        canvas:
            Color:
                rgb: utils.get_color_from_hex("#FFFFFF")
            Rectangle:
                size: self.size
                pos: self.pos

        FloatLayout:
            canvas:
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 1
            pos_hint: {"x": 0, "y": 0}
            size_hint: 1, 1

            ImageButton:
                id: logo
                source: "Images/CookStock/logo-cs.png"
                size_hint: 0.05,0.1
                pos_hint: {'center_x': 0.1, 'center_y': 0.95}
                on_press:
                    app.classify_recettes()
                    print(app.livre)

